#version 330 core
layout (location = 0) in vec2 aPos;
layout (location = 1) in float aInfected;
layout (location = 2) in float aSusceptible;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;
uniform int isEdge;

out vec3 vertexColor;
out float infected;

void main() {
    gl_Position = projection * view * model * vec4(aPos, 0.0, 1.0);
    infected = aInfected;

    gl_PointSize = (isEdge == 1) ? 1.0 : 12.0;
}